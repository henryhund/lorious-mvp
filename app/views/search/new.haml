- content_for :content do
  #search
    .row.visible-xs
      .col-xs-12
        Search bar
    .row
      .col-sm-3.hidden-xs
        #search-bar.row
          .col-sm-12
            .marketplace-filters
              Search
              %br
              %input.search-query{:placeholder => "Search", :type => "text", :style => "width:60%;"}
              %hr
              .checkbox
                %label
                  %input{:type => "checkbox"}/
                  Only Show Currently Online
              %hr
              Tag
              %br
              %input.search-query{:placeholder => "Tag (Tokenized Fields)", :type => "text", :style => "width:60%;"}
              %hr
              Location
              Within
              %select
                %option 1 mile
                %option 10 miles
                %option 25 miles
                %option 25 miles +
              %input.search-query{:placeholder => "Location (Select?)", :type => "text", :style => "width:60%;"}
              %hr
              Price / hour
              %br
              %input.search-query{:placeholder => "Max / hour", :type => "text", :style => "width:60%;"}
              // Ideally this would be a slider/input type range select?
              %hr
              Rating
              %br
              %input#five{:type => "checkbox"}
                %label.star{id: "star5", for: "five"}
              %br
              %input#four{:type => "checkbox"}
                %label.star{id: "star4", for: "four"}
              %br
              %input#three{:type => "checkbox"}
                %label.star{id: "star3", for: "three"}
              %br
              %input#two{:type => "checkbox"}
                %label.star{id: "star2", for: "two"}
              %br
              %input#one{:type => "checkbox"}
                %label.star{id: "star1", for: "one"}
      #search-results.col-sm-9
        %ul.list-unstyled
          - @experts.each do |expert|
            %li
              .result-picture-div
                =link_to user_profile_url(expert), class: "review-name-link" do
                  =image_tag(expert.avatar_url, class: "img-circle avatar-image")

                %p= "#{number_to_currency(expert.hourly_rate, precision: 0)} / hour"

              .result-detail-div
                %p.review-name.pull-left
                  =link_to user_profile_url(expert), class: "review-name-link" do
                    = expert.display_name
                  %br
                  Freelancer | Washington, D.C.
                .appointment-info.pull-right{style:"display:inline;"}
                  .star{id: "star-average1", style:"display:inline;"}
                  \|
                  %span= pluralize(expert.number_of_conversations, "Conversation")

                %p= expert.tagline
                %hr
                - expert.tags.each do |tag|
                  =link_to "#" do
                    %span.highlighted= tag
