= form_tag create_card_url, class: "add-stripe-credit-card-form" do
  %span.payment-errors
  .form-row
    %label
      %span Card Number
      %input.card-number{"data-stripe" => "number", :size => "20", :type => "text"}/
  .form-row
    %label
      %span CVC
      %input.card-cvc{"data-stripe" => "cvc", :size => "4", :type => "text"}/
  .form-row
    %label
      %span Expiration (MM/YYYY)
      %input{"data-stripe" => "exp-month", :size => "2", :type => "text"}/
      %span /
      %input{"data-stripe" => "exp-year", :size => "4", :type => "text"}/
  = submit_tag "Submit"

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>

:coffeescript
  Stripe.setPublishableKey("#{STRIPE_PUBLIC_KEY}");

- content_for :page_specific_javascript do
  = javascript_include_tag "jquery_payment.js"
  = javascript_include_tag "new_card.js"
